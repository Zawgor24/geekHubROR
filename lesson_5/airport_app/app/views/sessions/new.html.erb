<div class= "p-3 mb-2 bg-secondary text-white" align="center">
  <h1>Log in</h1>

  <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </p>

    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>

    <%= submit_tag 'Log in' %> or 
    <%= link_to 'Registrate', signup_path %>
  <% end %>
</div>  