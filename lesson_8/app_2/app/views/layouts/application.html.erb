<!DOCTYPE html>
<html>
  <head>
    <title>App2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand active"  href="#" >Application #2</a>
        </div>
        <ul class="nav navbar-nav">
          <% if current_user.present? %>
            <li class="active"><%= link_to 'Go home', root_path %></li>
            <li ><%= link_to 'Profile', current_user %></li>
            <li ><%= link_to 'Edit Profile', edit_user_path(current_user) %></li>
            <li><%= link_to 'Go to admin', admin_users_path if current_user.admin? %></li>
          </ul>
          <button class="logout btn btn-danger navbar-btn" ><%= link_to 'Log out', destroy_user_session_path,
                          method: :delete %></button>
          <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
