<tr>
  <td><%= post.id %></td>
  <td><%= post.title %></td>
  <td><%= post.body %></td>
  <td><%= link_to 'Show post', post %></td>
  <td><%= link_to 'Edit post', edit_post_path(post) %></td>
  <td><%= link_to 'Delete post', post, 
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
</tr>